<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS Bundle (including Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Basic Styling for Section */
    .section {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
    }

    .section-title {
        color: #000;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .list-group-item {
        border: none;
        background-color: transparent;
        padding-left: 0;
    }

    .name-time {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .time-date {
        background-color: #c2c6c950;
        border-radius: 50px;
        padding-inline: 10px;
        color: #9da2a8;
    }
</style>

<!-- Page Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">User Feedback</h1>

    <div class="btn-toolbar mb-2 mb-mb 0">
        <div class="btn-group me-2">
            <a href="#" class="btn btn-sm btn-outline-secondary"> -- </a>
        </div>
    </div>
</div>

<!-- Content -->
<div class="container-fluid py-4">    
        <% if (feedbackData && feedbackData.length > 0) { %>
            <% feedbackData.forEach((feedback) => { %>
                <section class="section">
                    <div class="feedback-item mb-3">
                        <div class="name-time">
                            <p><strong>Name:</strong> <%= feedback.name %></p>
                            <p class="time-date"><span class="me-2">&#128340;</span> <%= new Date(feedback.updatedAt).toLocaleString() %> </p>
                        </div>
                        <p><strong>Email:</strong> <%= feedback.email %></p>
                        <p><strong>Subject:</strong> <%= feedback.subject %></p>
                        <p>
                            <strong>Message:</strong> <%= feedback.message %>
                        </p>
                        <!-- <div class="mt-3">
                            <button class="btn btn-primary">Send Reply</button>
                        </div>  -->
                    </div>
                </section>
            <% }); %>
        <% } else { %>
            <section class="section">
                <p>No feedback available at the moment.</p>
            </section>
        <% } %>
</div> 