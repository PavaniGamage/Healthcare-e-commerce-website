<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS Bundle (including Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .no-link-style {
        text-decoration: none;
        color: inherit;
    }
</style>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search Products</h1>

    <div class="btn-toolbar mb-2 mb-mb 0">
        <div class="btn-group me-2">
            <a href="#" class="btn btn-sm btn-outline-secondary"> -- </a>
        </div>
    </div>
</div>

<div style="min-height: 100vh">
    <div class="table-responsive">
        <% if (products.length > 0) { %>
            <div class="row">
                <% products.forEach(element => { %>
                    <div class="col-md-4 mb-3"> 
                        <a href="/view/<%= element._id %>" class="text-decoration-none">
                            <div class="card d-flex flex-row">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%= element.name %></h5>
                                    <p class="card-text">Price: Rs. <%= element.price %></p>
                                    <p class="card-text">Availability: <%= element.availability %></p>
                                </div>
                                <img src="<%= element.imageUrl %>" class="card-img-right" alt="<%= element.name %>" style="max-height: 150px; width: 150px; object-fit: cover; border: 1px solid gray; border-radius: 5px; padding: 10px;">
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="lead fw-lighter text-muted">No results found.</p>
        <% } %>
    </div> 
</div> 
