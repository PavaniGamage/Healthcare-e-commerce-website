<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medserv</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .container-home {
            padding: 0px;
            width: 100%;
        }
        .row-1 {
            background-color: #1DAEFF;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        }
        .row-2 {
            background-color: #0097ED;
            padding-block: 1px;
        }
        .navbar-brand {
            color: white !important;
        }
        .nav-link {
            color: white !important;
        }
        .nav-link:hover {
            color: #F0F8FF !important; /* Lighter blue on hover */
        }
        .search-container {
            display: flex;
            justify-content: center;           
            margin-top: 20px; /* Space above the search bar */
        }
        .search-bar {
            width: 50%; /* Set width to 50% of the page */
        }
        .search-container input {
            border-radius: 50px;
            padding-left: 25px;
            padding-right: 25px;
        }
        .search-container button{
            border-radius: 50%;
            border: none;
        }
        .search-container button:hover {
            background-color: rgb(211, 211, 211);
        }
    </style> 
</head>
<body>
    <div class="container-home">
        <div class="row-1">
            <ul>
                <a class="navbar-brand" href="/" style="font-weight: bold; font-size: 40px;">Medserv</a>
            </ul>
            <ul style="margin-top: 10px;">
                <a class="navbar-brand signin" href="/sign_in" style="font-weight: 500; font-size: 20px; margin-right: 20px;">
                <i class="fas fa-user" style="margin-right: 10px;"></i> Log In </a>
            </ul>
        </div> 

        <div class="row-2">
            <ul>
                <!-- Search Bar Section -->
                <div class="search-container">
                    <form class="d-flex search-bar" action="/search" method="POST" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search.." aria-label="Search" name="searchTerm">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Access the link element SignIn
        let signInLink = document.querySelector('.signin');
        // Check if a role is set and use it
        const role = localStorage.getItem('role');
        
        // Check if a role is set and use it
        if (role) {
            console.log("The selected role is:", role); 
            if (role === 'admin') {
                signInLink.innerHTML = '<i class="fas fa-user" style="margin-right: 10px;"></i> Admin';
            } else if (role === 'pharmacist') {
                signInLink.innerHTML = '<i class="fas fa-user" style="margin-right: 10px;"></i> Pharmacist';
            }
        } else {
            console.log("No role selected");
        }
    </script>
</body>
</html> 



