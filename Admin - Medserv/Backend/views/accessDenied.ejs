<!-- content -->
<div class="d-flex flex-column justify-content-center align-items-center text-center pt-5 pb-5 mb-3 border-bottom">
    <h2 class="h2 fs-4 mb-3 text-danger">Access Denied!</h2> 
    <p class="lead mb-4">You do not have the necessary permissions to view this page.</p>
    <p class="btns">
        <a onclick="goBack()" class="btn btn-primary btn-lg">Go Back!</a>
        <a onclick="login()" class="btn btn-primary btn-lg">Login!</a>
    </p>
</div>

<script>
    function goBack() {
        if (document.referrer) {
            window.location.href = document.referrer; // Go back to the previous page
        } else {
            window.location.href = '/sign_in'; // If no referrer, go to the signin page
        }
    }
    function login() {
        window.location.href = '/sign_in'; // go to the signin page
    }
</script>